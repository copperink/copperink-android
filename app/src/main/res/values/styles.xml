<resources>

    <!-- Main application theme -->
    <style name="CopperInk" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Inverse Variant -->
    <style name="CopperInk.Inverse" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:buttonStyle">@style/CopperInk.Inverse.Button</item>
    </style>

    <!-- Without ActionBar -->
    <style name="CopperInk.NoActionBar" parent="CopperInk.Inverse">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- For Splash Screen -->
    <style name="CopperInk.Splash" parent="CopperInk.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>


    <!-- Button -->
    <style name="CopperInk.Inverse.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_inverse</item>
    </style>


</resources>
