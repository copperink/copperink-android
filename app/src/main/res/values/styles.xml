<resources>

    <!-- Main application theme -->
    <style name="CopperInk" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/bg</item>

        <item name="editTextStyle">@style/CopperInk.EditText</item>
        <item name="android:checkboxStyle">@style/CopperInk.Checkbox</item>
        <item name="android:progressBarStyle">@style/CopperInk.ProgressBar</item>
    </style>


    <!-- Inverse Variant -->
    <style name="CopperInk.Inverse" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:buttonStyle">@style/CopperInk.Inverse.Button</item>
    </style>


    <!-- Without ActionBar -->
    <style name="CopperInk.NoActionBar" parent="CopperInk">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CopperInk.Inverse.NoActionBar" parent="CopperInk.Inverse">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- For Splash Screen -->
    <style name="CopperInk.Splash" parent="CopperInk.Inverse.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>


    <!-- Toolbar Styles -->
    <style name="CopperInk.Toolbar"      parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="CopperInk.Toolbar.Menu" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Button -->
    <style name="CopperInk.Inverse.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_inverse</item>
    </style>

    
    <!-- Progress Bar -->
    <style name="CopperInk.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primary</item>
    </style>


    <!-- Checkbox -->
    <style name="CopperInk.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:foregroundTint">@color/primary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:buttonTint">@color/primary</item>
    </style>


    <!-- FAB -->
    <style name="CopperInk.FAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:tint">@color/accentSecondary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="useCompatPadding">true</item>
        <item name="fabSize">normal</item>
    </style>


    <!-- EditText -->
    <style name="CopperInk.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/grayLight</item>
    </style>

    <style name="CopperInk.EditText.Full" parent="CopperInk.EditText">
        <item name="android:background">@null</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

</resources>
